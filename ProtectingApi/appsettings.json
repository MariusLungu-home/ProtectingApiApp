{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "IpRateLimitSection": {
    "EnableEndpointRateLimiting": false, // limits requests per endpoint, and not per client
    "StackBlockedRequests": false, // if true, blocked requests are not logged"
    "RealIpHeader": "X-Real-IP", // header containing the real client IP address
    "HttpStatusCode": 429, // HTTP status code returned when a client is blocked"
    "IpWhitelist": [ "127.0.0.1" ], // white listed IPs 
    "EndpointWhitelist": [], // eg: "GET:/api/users"; white listed endpoints within the API
    "GeneralRules": [ // general rules that apply to all endpoints
      {
        "Endpoint": "*", // all endpoints
        "Period": "5s", // the time period for which the limit is applied
        "Limit": 2 // max requests per period (every 5 seconds you can make 2 requests)
      }
    ]
  }
}
